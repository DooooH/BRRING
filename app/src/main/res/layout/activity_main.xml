<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:background="@drawable/border_bottom_round">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="72dp">

                <ImageButton
                    android:id="@+id/login_Btn"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="left"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="22dp"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/sign_in"
                    app:tint="@color/white" />

                <ImageView
                    android:layout_width="124dp"
                    android:layout_height="54dp"
                    android:layout_gravity="center"
                    android:src="@drawable/brring_white" />

                <ImageButton
                    android:id="@+id/alarm_btn"
                    android:layout_width="78dp"
                    android:layout_height="75dp"
                    android:layout_gravity="right"
                    android:background="#00ff0000"
                    android:scaleType="fitXY"
                    android:src="@drawable/notification"
                    app:tint="@color/white" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="398dp"
                android:layout_height="54dp"
                android:layout_gravity="center_horizontal">

                <Button
                    android:id="@+id/search_txt"
                    android:singleLine="true"
                    android:imeOptions="actionSearch"
                    android:layout_width="370dp"
                    android:layout_height="38dp"
                    android:layout_gravity="center"
                    android:background="@drawable/edit_round"
                    android:gravity="center"
                    android:hint="원하는 상품을 검색해보세요" />

                <Button
                    android:id="@+id/searchBtn"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="right"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="25dp"
                    android:background="@drawable/search" />
            </FrameLayout>

        </LinearLayout>

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/recom_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:text="브링의 추천 상품"
                android:textColor="#000000"
                android:textSize="15dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recom_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

            <TextView
                android:id="@+id/recent_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:text="최근 검색"
                android:textColor="#000000"
                android:textSize="15dp" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/search_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


            <Button
                android:id="@+id/boardBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="게시판" />

            <Button
                android:id="@+id/mypage_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="50dp"
                android:text="마이페이지" />
        </LinearLayout>
    </ScrollView>



</LinearLayout>
