<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ScrollView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/productImageIv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ipad"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/productNameTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이패드 프로 16형 어쩌구말쓰부스" />
                    <TextView
                        android:id="@+id/productPriceTv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100원"/>
                </LinearLayout>
                <Button
                    android:id="@+id/productDetailBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:text="상품 보러가기" />
            </LinearLayout>



            <View
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="3px" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/write"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="바나나라씨"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="경북대학교"/>
                </LinearLayout>
            </LinearLayout>

            <View
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_height="3px" />

            <TextView
                android:id="@+id/postTitleTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="제목"/>

            <TextView
                android:id="@+id/postContentTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="게시글내용"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#DFCDFF"
                android:text="댓글"/>

            <ListView
                android:id="@+id/commentLv"
                android:layout_width="match_parent"
                android:layout_height="500dp" />
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/commentContentEt"
            android:singleLine="true"
            android:imeOptions="actionDone"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:hint="댓글 내용"/>
        <Button
            android:id="@+id/commentSubmitBtn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:text="작성" />
    </LinearLayout>
</LinearLayout>